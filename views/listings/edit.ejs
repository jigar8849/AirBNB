<%- layout("/layouts/boilerplate") %>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <h2>Edit your listing</h2>
                <form action="/listings/<%= listing._id %>?_method=PUT" method="post">
                    <div class="mb-3">
                        <label for="title" class="form-lable">Title</label>
                        <input name="listings[title]" value="<%= listing.title %>" type="text" class="form-control">
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-lable">Description</label>
                        <textarea name="listings[description]"
                            class="form-control"><%= listing.description %></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-lable">Image</label>
                        <input name="listings[image]" value="<%= listing.image %>" type="text" class="form-control">
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                        <label for="price" class="form-lable">Price</label>
                        <input name="listings[price]" value="<%= listing.price %>" type="number" class="form-control">
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-lable">Country</label>
                        <input name="listings[country]" value="<%= listing.country %>" type="text" class="form-control">
                    </div>
                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-lable">Location</label>
                        <input name="listings[location]" value="<%= listing.location %>" type="text"
                            class="form-control">
                    </div>
                    <button class="btn btn-dark edit-btn mt-3 mb-3 edit-btn">Edit</button>
                </form>
            </div>
        </div>
    </body>