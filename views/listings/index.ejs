<% layout("/layouts/boilerplate") %>

    <style>
        #filters {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
            
        }

        .filter {
            text-align: center;
            margin-right: 2rem;
            margin-top: 2rem;
            opacity: 0.7;
        }

        .filter:hover {
            opacity: 1;
            cursor: pointer;

            p {
                font-weight: bolder;
                font-size: 0.8rem;
            }
        }

        .filter p {
            font-size: 0.8rem;
        }
        #tax-info{
            display: none;
        }

        .tax-toggle{
            border: 1px solid black;
            border-radius: 1rem;
            height: 3.25rem;
            padding: 1rem;
            margin-left: 7rem;
        }
    </style>

    <body>
        <!-- <h1>All Listings</h1> -->
        <div id="filters">
            <div class="filter">
                <div><i class="fa-solid fa-fire fa-xl" style="color: #050505;"></i></div>
                <p>Trending</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-bed fa-xl" style="color: #050505;"></i></div>
                <p>Rooms</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-mountain-city fa-xl" style="color: #050505;"></i></div>
                <p>Iconic cities</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-mountain fa-xl" style="color: #050505;"></i></div>
                <p>Mountains</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-chess-rook fa-xl" style="color: #0d0d0d;"></i></div>
                <p>Castles</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-person-swimming fa-xl" style="color: #0a0a0a;"></i></div>
                <p>Amazing Pools</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-campground fa-xl" style="color: #080808;"></i></div>
                <p>Camping</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-cow fa-xl" style="color: #050505;"></i></div>
                <p>Farms</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-snowflake fa-xl" style="color: #050505;"></i></i></div>
                <p>Arctic</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-igloo fa-xl" style="color: #050505;"></i></div>
                <p>Domes</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-ship fa-xl" style="color: #050505;"></i></i></div>
                <p>Boats</p>
            </div>

            <div class="tax-toggle">
                <div class="form-check-reverse form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                    <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
                </div>
            </div>
        </div>

        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
            <% for (let listing of allListings) { %>
                <a href="/listings/<%= listing._id %>" class="listing-link">
                    <div class="card col listing-card">
                        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image"
                            style="height: 20rem;" />
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%= listing.title %> <br>
                                </b>
                                &#8377;<%= listing.price.toLocaleString("en-IN") %> / night
                                <i class="tax-info"> &nbsp; &nbsp;+18 GST</i>
                            </p>
                        </div>
                    </div>
                </a>
                <% } %>
        </div>


        <script>
            let taxSwitch = document.getElementById("switchCheckDefault")

            taxSwitch.addEventListener("click",()=>{
                 let textInfo = document.getElementsByClassName("tax-info");
                 for(info of textInfo){
                    if(info.style.display != "inline"){
                        info.style.display = "inline";
                    }else{
                        info.style.display = "none";
                    }
                 }
            })
        </script>
    </body>